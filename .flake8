[flake8]
max-line-length = 88
extend-ignore = 
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E501: line too long (handled by black)
    E501,
    # F401: module imported but unused (handled by isort)
    F401
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    env,
    node_modules,
    dist,
    build,
    .tox,
    .mypy_cache,
    .pytest_cache,
    *.egg-info,
    migrations

per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401
    # Allow long lines in settings files
    settings.py:E501
    # Allow star imports in test files
    test_*.py:F405,F403
    *_test.py:F405,F403

max-complexity = 10
docstring-convention = google