{
  "name": "webcammerplus-linter",
  "version": "1.0.0",
  "description": "Linter setup for Java, HTML, and CSS",
  "scripts": {
    "lint:java": "checkstyle -c checkstyle.xml src/",
    "lint:html": "htmlhint src/**/*.html",
    "lint:css": "stylelint src/**/*.css",
    "lint:all": "npm run lint:java && npm run lint:html && npm run lint:css",
    "lint:fix:css": "stylelint src/**/*.css --fix",
    "lint:fix:html": "htmlhint src/**/*.html --fix",
    "install:checkstyle": "curl -L https://github.com/checkstyle/checkstyle/releases/download/checkstyle-10.12.5/checkstyle-10.12.5-all.jar -o checkstyle.jar",
    "setup": "npm install && npm run install:checkstyle"
  },
  "devDependencies": {
    "htmlhint": "^1.1.4",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-recommended": "^13.0.0"
  },
  "keywords": [
    "linter",
    "java",
    "html",
    "css",
    "checkstyle",
    "htmlhint",
    "stylelint"
  ],
  "author": "",
  "license": "MIT"
} 