{
  "name": "webcammerplus-linter",
  "version": "1.0.0",
  "description": "Linter setup for JavaScript, HTML, and CSS",
  "scripts": {
    "lint:js": "eslint src/**/*.js",
    "lint:html": "htmlhint src/**/*.html",
    "lint:css": "stylelint src/**/*.css",
    "lint:all": "npm run lint:js && npm run lint:html && npm run lint:css",
    "lint:fix:js": "eslint src/**/*.js --fix",
    "lint:fix:css": "stylelint src/**/*.css --fix",
    "lint:fix:html": "htmlhint src/**/*.html --fix",
    "setup": "npm install"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "htmlhint": "^1.1.4",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-recommended": "^13.0.0"
  },
  "keywords": [
    "linter",
    "javascript",
    "html",
    "css",
    "eslint",
    "htmlhint",
    "stylelint"
  ],
  "author": "",
  "license": "MIT"
} 